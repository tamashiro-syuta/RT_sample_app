<% if @feed_items.any? %>
  <ol class="microposts">
    <%= render @feed_items %>
  </ol>
  <!-- micropostを作る際に動く createアクションは、Micropostコントローラにあるので
       /microposts?page=2 という存在しないURLに飛んでることになるので
       will_pagenate の引数を明示的に示さないといけない-->
  <%= will_paginate @feed_items,
                    params: { controller: :static_pages, action: :home } %>
<% end %>